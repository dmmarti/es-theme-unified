<!--
theme name:     Unified
version         1.0
-->

<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<feature supported="carousel">   
   <view name="system">
 <carousel name="systemcarousel">
        <type>horizontal</type>
        <pos>0 0.0</pos>
        <size>1 1</size>
        <logoScale>1.35</logoScale>
        <logoSize>0.15 0.190</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
 </carousel>  
   </view>
</feature>   

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <textColor>777777</textColor>
         <iconColor>77777750</iconColor>
      </helpsystem>
   </view>

   <view name="basic,detailed,video">
      <image name="background">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>false</tile>
         <path>./_inc/images/background.png</path>
      </image>
      <textlist name="gamelist">
         <pos>0.1875 0.175</pos>
         <size>0.1 0.1</size>
         <selectorColor>1c1c1c00</selectorColor>
         <selectedColor>e22828</selectedColor>
         <primaryColor>eaeaea</primaryColor>
         <secondaryColor>eaeaea</secondaryColor>
         <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.025</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>center</alignment>
      </textlist>
   </view>

   <view name="basic">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.075</pos>
         <maxSize>0.35 0.15</maxSize>
      </image>
      <textlist name="gamelist">
         <pos>0.3125 0.275</pos>
         <size>0.4 0.61</size>
         <alignment>center</alignment>
      </textlist>
   </view>

   <view name="detailed,video">
      <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_lastplayed, md_lbl_playcount, md_rating, md_developer, md_publisher, md_genre, md_playcount, md_lastplayed">
         <pos>1 1</pos>
      </text>
      <text name="md_description,md_lbl_players,md_players,md_genre,md_releasedate">
         <color>777777</color>
         <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.0175</fontSize>
      </text>
      <rating name="md_rating">
         <pos>0.1 1.575</pos>
         <size>0 0.025</size>
         <filledPath>./_inc/images/star_filled.svg</filledPath>
         <unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
      </rating>
      <text name="md_description">
         <pos>0.1 1.625</pos>
         <size>0.4625 0.175</size>
         <color>cccccc</color>
      </text>
      <text name="md_lbl_players">
         <pos>0.1 1.825</pos>
         <size>0.0625 0.025</size>
      </text>
      <text name="md_players">
         <pos>0.15 1.825</pos>
         <size>0.0375 0.025</size>
      </text>
      <datetime name="md_releasedate">
         <pos>0.175 1.825</pos>
         <size>0.075 0.025</size>
      </datetime>
      <text name="md_genre">
         <pos>0.2625 1.825</pos>
         <size>0.1 0.025</size>
      </text>
      <textlist name="gamelist">
         <pos>0.775 0.275</pos>
         <size>0.21 0.59</size>
         <alignment>left</alignment>
         <zIndex>50</zIndex>
      </textlist>
   </view>

   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.2815 0.5625</pos>
         <zIndex>5</zIndex>
         <maxSize>0.375 0.5</maxSize>
      </image>
   </view>

   <view name="video">
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.2815 0.5675</pos>
         <zIndex>5</zIndex>
         <maxSize>0.375 0.5</maxSize>
      </video>
	  <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.6285 0.62</pos>
         <zIndex>5</zIndex>
         <maxSize>0.25 0.45</maxSize>
      </image>
   </view>
   
</theme>
